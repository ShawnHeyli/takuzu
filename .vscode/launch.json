  "version": "0.2.0",
  "configurations": [
    {
      "name": "all valid grid",
      "preLaunchTask": "Run make all",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/takuzu_debug",
      "args": [
        "-a",
        "test/grid_valid"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "all consistent grid",
      "preLaunchTask": "Run make all",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/takuzu_debug",
      "args": [
        "-a",
        "test/grid_consistent"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "generate 16x16 grid",
      "preLaunchTask": "Run make all",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/takuzu_debug",
      "args": [
        "-g",
        "16",
        "--number",
        "8"
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ]
}